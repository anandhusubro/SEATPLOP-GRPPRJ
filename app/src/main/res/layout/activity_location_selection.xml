<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".LoginSignup.LocationSelectionActivity">

  <RelativeLayout
      android:layout_width="match_parent"
      android:id="@+id/action_bar_lay"
      android:elevation="30dp"
      android:layout_height="?actionBarSize">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_general_back_icon"
            android:layout_centerVertical="true"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Full NAME"
            android:textAllCaps="true"
            android:layout_toEndOf="@id/back_icon"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="25sp"
            android:fontFamily="@font/baloo"
            android:textColor="@color/light_black"
            android:padding="5dp"/>


  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/text_btn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/action_bar_lay">

      <TextView
          android:id="@+id/common_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Where u wanna be...???"
          android:layout_margin="5dp"
          android:layout_centerHorizontal="true"
          android:textAlignment="center"
          android:gravity="center"
          android:textSize="20sp"
          android:fontFamily="@font/muli_black"
          android:textColor="@color/black"
          android:padding="5dp"/>

      <Button
          android:id="@+id/locate_me_btn"
          android:layout_width="300dp"
          android:layout_height="wrap_content"
          android:text="Locate Me"
          android:onClick="locateMe"
          android:layout_below="@id/common_text"
          android:textColor="@color/white"
          android:textStyle="bold"
          android:fontFamily="@font/muli"
          android:layout_centerHorizontal="true"
          android:background="@drawable/black_circle"/>

      <ListView
          android:id="@+id/state_list_view"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="10dp"
          android:layout_below="@id/locate_me_btn"
          android:textAlignment="center" />

  </RelativeLayout>

  </RelativeLayout>