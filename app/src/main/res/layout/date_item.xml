<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="85dp"
    android:layout_height="100dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/date_item_bg_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/black_border"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/date_item_date_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/muli_semibold"/>

                <TextView
                    android:id="@+id/date_item_month_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="May"
                    android:layout_below="@+id/date_item_date_txt"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/muli_extrabold"/>

                <TextView
                    android:id="@+id/date_item_year_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2021"
                    android:layout_below="@+id/date_item_month_txt"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/muli_semibold"/>

            </RelativeLayout>

            <Button
                android:id="@+id/date_item_click"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/flag_transparent"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>