<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".LoginSignup.Admin.AdminDashboardActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/lay_action_bar"
            android:layout_width="match_parent"
            android:elevation="30dp"
            android:layout_height="?actionBarSize">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_general_back_icon"
                android:padding="10dp"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/jump_to_login_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="callLoginScreen"
                android:text="LOGIN"
                android:fontFamily="@font/baloo"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/heading_lay"
            android:layout_width="match_parent"
            android:layout_below="@id/lay_action_bar"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADMIN\n\t\t\t\t\t\t\tDASHBOARD"
                android:padding="20dp"
                android:fontFamily="@font/muli_black"
                android:textSize="30sp"
                android:textColor="@color/black"/>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_toEndOf="@id/title_txt"
                android:src="@drawable/admin" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/firs_lin_lay"
            android:layout_below="@id/heading_lay"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:paddingStart="13dp"
            android:paddingEnd="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:onClick="AddStadium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/black_border"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:src="@drawable/stadium"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/baloo"
                    android:padding="10dp"
                    android:text="ADD A STADIUM"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:orientation="vertical"/>


            <LinearLayout
                android:onClick="ScheduleEvent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/black_border"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:src="@drawable/event" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:fontFamily="@font/baloo"
                    android:gravity="center"
                    android:text="SCHEDULE A EVENT"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_below="@id/firs_lin_lay"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:paddingStart="13dp"
            android:paddingEnd="5dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:onClick="EditAdminDetails"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/black_border"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:src="@drawable/man"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="0dp"
                    android:fontFamily="@font/baloo"
                    android:padding="5dp"
                    android:text="EDIT ADMIN DETAILS"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:orientation="vertical"/>


            <LinearLayout
                android:onClick="VerifyStadiumId"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/black_border"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:src="@drawable/note_color" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="0dp"
                    android:fontFamily="@font/baloo"
                    android:gravity="center"
                    android:text="VERIFY STADIUM ID"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>